@page "/home"
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation

<MudPaper Width="250px" Height="100vh" Class="py-3" Elevation="0">
    <MudNavMenu>
        <MudText Typo="Typo.h6" Class="px-10">Workspace Manager</MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/home">Home</MudNavLink>
        <MudNavLink Href="/order">Add order</MudNavLink>
        <MudNavLink Href="/history">Order history</MudNavLink>
    </MudNavMenu>
    <MudButton Class="bottom-left-btn" @onclick="GoToLogin" Variant="Variant.Outlined" Color="Color.Primary">Log out</MudButton>
</MudPaper>

@code{
    void GoToLogin()
    {
        Navigation.NavigateTo("/");
    }
}