@page "/order"
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation


<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.End"
                       OnClick="ToggleDrawer" />
        <MudSpacer />
        <MudText Align="Align.Center">Welcome to Workspace Manager!</MudText>
        <MudSpacer />
        <MudButton @onclick="GoToLogin"
                   Variant="Variant.Filled"
                   Color="Color.Secondary">
            Log out
        </MudButton>
    </MudAppBar>



    <MudDrawer Variant="DrawerVariant.Temporary" @bind-Open="_drawerOpen"
               ClipMode="DrawerClipMode.Never"
               Elevation="4"
               Width="250px">
        <MudNavMenu>
            <MudText Typo="Typo.h6" Class="px-6 pt-4 pb-2">
                Workspace Manager
            </MudText>
            <MudDivider Class="my-2" />
            <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="/order" Icon="@Icons.Material.Filled.AddCircle">Add order</MudNavLink>
            <MudNavLink Href="/history" Icon="@Icons.Material.Filled.History">Order history</MudNavLink>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Primary" OnClick="ToggleDrawer">Back</MudButton>
            </MudCardActions>
        </MudNavMenu>
    </MudDrawer>
    <MudText Typo="Typo.h4" Align="Align.Center" Style="color:white; margin-top: 50px">Create new Order!</MudText>
	<MudSpacer></MudSpacer>


    <MudPaper Elevation="0" Class="workspace-container3">
        <MudCard Style="width: 400px; padding: 24px;">
            <MudText Typo="Typo.h6">There is no Workspace?   Create one! </MudText>
            <MudSpacer></MudSpacer>
            <MudTextField @bind-Value="TextValue" Label="Workspace Name (with number)" Variant="Variant.Outlined"></MudTextField>
            <MudButton Variant="Variant.Filled" Color="Color.Primary">Create</MudButton>
        </MudCard>
    </MudPaper>

    <MudContainer>
        <MudGrid>
            <MudItem xs="12" sm="6" >
                <MudPaper Elevation="0" Class="workspace-container2">
                    <MudStack Row Class="justify-space-between mud-width-full">
                         <MudStack Style="width: 300px">
                             <MudSelect @bind-Value="_value" Label="Select Workspace" >
                               @foreach (var state in _states)
                                    {
                                        <MudSelectItem Value="state">@state</MudSelectItem>
                                    }
                           </MudSelect>
                        </MudStack>
                    </MudStack>

                    @code {
                                private string _value;
                                private readonly string[] _states =
                                {
                                    "Alabama", "Alaska", "Arizona", "Arkansas", "California",
                                    "Colorado", "Connecticut", "Delaware", "Florida", "Georgia",
                                    "Hawaii", "Idaho", "Illinois", "Indiana", "Iowa", "Kansas",
                                    "Kentucky", "Louisiana", "Maine", "Maryland", "Massachusetts",
                                    "Michigan", "Minnesota", "Mississippi", "Missouri", "Montana",
                                    "Nebraska", "Nevada", "New Hampshire", "New Jersey", "New Mexico",
                                    "New York", "North Carolina", "North Dakota", "Ohio", "Oklahoma",
                                    "Oregon", "Pennsylvania", "Rhode Island", "South Carolina", "South Dakota",
                                    "Tennessee", "Texas", "Utah", "Vermont", "Virginia",
                                    "Washington", "West Virginia", "Wisconsin", "Wyoming"
                                };
                            }

                </MudPaper>
           </MudItem>

            <MudItem xs="12" sm="6">
                <MudPaper Elevation="0" Class="workspace-container">
                    <MudCard Style="width: 400px; padding: 24px;">
                        <MudTextField @bind-Value="TextValue" Label="Order number" Variant="Variant.Outlined"></MudTextField>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary">Create</MudButton>
                    </MudCard>

                </MudPaper>
            </MudItem>

           
        </MudGrid>
    </MudContainer>
    
</MudLayout>

@code {

    public string TextValue { get; set; }

    private bool _drawerOpen = false;

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
	void GoToLogin()
	{
		Navigation.NavigateTo("/");
	}
}
